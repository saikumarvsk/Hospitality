pipeline {
    agent any

    environment {
        NODEJS_VERSION = '14'
    }

    stages {
        stage('Integration') {
            steps {
                // Checkout the code from your Git repository
                git 'https://github.com/saikumarvsk/Hospitality.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Change to the project directory
                    dir('Hospital-management-nodejs-master') {
                        // Set up Node.js and install project dependencies
                        sh 'npm install'
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Change to the project directory
                    dir('Hospital-management-nodejs-master') {
                        // Install dependencies
                        // sh 'npm install'

                        // Run your tests (replace 'your_test_command_here' with the actual command)
                        sh 'npm test'
                    }
                }
            }
        }
         stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('sonar') {
                        sh "sonar-scanner -Dsonar.projectKey=Hospitality -Dsonar.sources=."
                    }
                }
            }
        }

    }
}
